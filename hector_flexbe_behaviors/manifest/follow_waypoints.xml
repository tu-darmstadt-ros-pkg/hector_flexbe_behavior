<?xml version="1.0" encoding="UTF-8"?>

<behavior name="Follow waypoints">

	<executable package_path="hector_flexbe_behaviors.follow_waypoints_sm" class="FollowwaypointsSM" />
	<tagstring>rc17, rc18, robocup</tagstring>
	<author>Gabriel Huettenberger</author>
	<date>Fri Jul 28 2017</date>
	<description>
		Follows a set of waypoints
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="numeric" name="speed" default="0.2" label="speed" hint="Sets the speed">
			<min value="0.2" />
			<max value="2.0" />
		</param>

		<param type="boolean" name="use_planning" default="True" label="use_planning" hint="Sets the use_planning" />

	</params>


</behavior>