<?xml version="1.0" encoding="UTF-8"?>

<behavior name="Waypoint mission">

	<executable package_path="hector_flexbe_behaviors.waypoint_mission_sm" class="WaypointmissionSM" />
	<tagstring>rc,waypoint</tagstring>
	<author>Gabriel Huettenberger</author>
	<date>Thu Apr 11 2019</date>
	<description>
		Follow a path of waypoints
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="boolean" name="usePlanning" default="True" label="usePlanning" hint="Sets the usePlanning" />

		<param type="numeric" name="speed" default="0.2" label="speed" hint="Sets the speed">
			<min value="0" />
			<max value="2" />
		</param>

		<param type="numeric" name="reexplore_time" default="0" label="reexplore_time" hint="Sets the reexplore_time">
			<min value="0" />
			<max value="99" />
		</param>

	</params>


</behavior>