<?xml version="1.0" encoding="UTF-8"?>

<behavior name="LineFollowing">

	<executable package_path="hector_flexbe_behaviors.linefollowing_sm" class="LineFollowingSM" />
	<tagstring></tagstring>
	<author>Katrin Becker</author>
	<date>Wed Apr 24 2019</date>
	<description>
		Behavior for RoboCup Man3 Task (LineFollowing on a ramp)
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="numeric" name="timeout_sec" default="15" label="timeout_sec" hint="Timeout for LineFollower">
			<min value="0" />
			<max value="300" />
		</param>

		<param type="numeric" name="distance_to_line" default="1.4" label="distance_to_line" hint="Distance to drive straight to reach line">
			<min value="0" />
			<max value="5" />
		</param>

		<param type="numeric" name="speed" default="0.2" label="speed" hint="Desired speed">
			<min value="0" />
			<max value="2" />
		</param>

	</params>


</behavior>